  "description": "Get and set request-scoped context anywhere, and use it in any framework.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": ["lib/**/*"],
  "scripts": {
    "test": "mocha -r ts-node/register test/*.ts",
    "build": "tsc",
